{
    "manifest_version": 3,
    "name": "Code Copy",
    "version": "1.0",
    "description": "Copies the contents of a <code> tag when clicked",
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": ["<all_urls>"]
}